{
  // "urls": "http://localhost:5000;https://localhost:5001", // do not forget a trailing slash
  "EnableSwagger": false,
  "Properties": {
    "Application": "Mbs.Api.Host.Ng"
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowAll": true,
    "Origins": []
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Trace",
      "System": "Warning",
      "Microsoft": "Warning"
    }
  },
  // "ApplicationInsights": { "InstrumentationKey": "", "ApiKey": "" },
  "Serilog": {
    // Verbose (Trace), Debug, Information, Warning, Error, Fatal (Critical)
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            { "Name": "File" }
            // { "Name": "ApplicationInsightsTraces" }
          ]
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Mbs.Api.Host.Ng_log_.json",
          "rollingInterval": "Day", // Infinite, Year, Month, Day, Hour, Minute
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
      // {
      //   "Name": "ApplicationInsightsTraces",
      //   "Args": { "restrictedToMinimumLevel": "Information",  "instrumentationKey": "[your key]" }
      // }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
  }
}
